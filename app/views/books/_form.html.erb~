<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :idbook %><br>
    <%= f.number_field :idbook %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :idauthor %><br>
   <select name="book[author_id]">
    <% Author.all.each do |c| %>
    <option value="<%= c.id %>"><%= c.name %></option>
    <% end %>
   </select>    
  </div>
  <div class="field">
    <%= f.label :ideditorial %><br>
    <select name="book[editorial_id]">
    <% Editorial.all.each do |c| %>
    <option value="<%= c.id %>"><%= c.name %></option>
    <% end %>
   </select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
